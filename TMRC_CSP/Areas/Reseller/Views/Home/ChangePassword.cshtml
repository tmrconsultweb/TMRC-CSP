@model TMRC_CSP.Areas.Reseller.Models.ChangePassword

@{
    ViewBag.Title = "Change Password";
    Layout = null;
}

@using (Html.BeginForm(FormMethod.Post))
{
    @Html.AntiForgeryToken()
    if (ViewBag.msg != null)
    {
        <p>@ViewBag.msg</p> 
        <p>Please @Html.ActionLink("Login", "Login", "Account") for confirmation.</p> 
    }
    else
    {
        <table>
            <tr>
                <th colspan="2">Change Reseller Password</th>
            </tr>
            <tr>
                <td colspan="2">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td>Old Password</td>
                <td>
                    @Html.TextBoxFor(m => m.OldPassword, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.OldPassword, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td>New Password</td>
                <td>
                    @Html.TextBoxFor(m => m.NewPassword, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td>Confirm Password</td>
                <td>
                    @Html.TextBoxFor(m => m.ConfirmPassword, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td>
                    <input type="submit" value="Save" />
                </td>
            </tr>
        </table>
    }
}