@model int
@{
    ViewBag.Title = "AddPromoCode";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<script>
    function SelectDiscount(e) {
        $("input[name='DefaultPercentage'], input[name='PromoCode']").attr('disabled', 'true');
        $(e).siblings('input').removeAttr('disabled');

    }
</script>

@Html.Partial("_Steps", 4)


    @if(ViewBag.msg != null)
    {
        <p>@ViewBag.msg</p>
    }
    else
    {
    using (Html.BeginForm())
    {
        <h3>Discount Offer<small>(If you want to change the default percentage before click next you should save first)</small></h3>
        <div class="row">
            <div class="col-lg-4">
                <input type="radio" name="Per" checked onclick="SelectDiscount(this)" />
                <b>Default Percentage</b>
                <input type="number" name="DefaultPercentage" value="@Model" class="form-control" />
            </div>
            <div class="col-lg-2">
                <input type="button" class="btn btn-info" value="Save" />
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-lg-4">
                <input type="radio" name="Per"  onclick="SelectDiscount(this)" />
                <b>Add Promo Code <small>(Do you have a Promo Code)</small></b>
                <input type="text" disabled name="PromoCode" class="form-control" />
            </div>
        </div>
        <div class="actions clearfix text-right">
            @Html.ActionLink("Previous", "SelectCustomers", "Admin", null, new { @class = "btn btn-default" })
            @Html.ActionLink("Next", "Confirmation", "Admin", null, new { @class = "btn btn-info" })
        </div>
    }

}





