                        <li> @Html.ActionLink("Promotion Code", "PromoCode", "Admin") </li>
                        <li> @Html.ActionLink("Price list Setting", "MicrosoftPriceList", "Admin") </li>
                        @*<li>@Html.ActionLink("Offers Setup", "OffersSetup", "Admin")</li>*@
                        <li>@Html.ActionLink("Sale Tax", "saleTax", "Admin")</li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Billing Setting <span class="caret"></span></a>
                    <ul class="dropdown-menu" role="menu">
                        <li class="dropdown-header">Billing Setting</li>
                        <li>@Html.ActionLink("Invoice", "InvoiceSetting", "Admin")</li>
                    </ul>
                </li>
                <li> @Html.ActionLink("Agents", "Resellers", "Admin")  </li>
                
                <li> @Html.ActionLink("Customers", "Customers", "Admin") </li>
                <li> @Html.ActionLink("Order Now", "SelectCustomers", "Admin") </li>
                @*<li> @Html.ActionLink("Users", "Users", "Admin") </li>*@
                <li>@Html.ActionLink("SignOut", "SignOut", "Account")</li>
                              
            </ul>
        </nav>
        <!-- /#sidebar-wrapper -->
        <!-- Page Content -->
        <div id="page-content-wrapper">
            <button type="button" class="hamburger is-open" data-toggle="offcanvas">
                <span class="hamb-top"></span>
                <span class="hamb-middle"></span>
                <span class="hamb-bottom"></span>
            </button>
            <div class="container">
                <div class="row">
                    <div class="col-lg-11">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-content-wrapper -->
